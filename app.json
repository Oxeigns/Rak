{
  "name": "AI Governor Bot (Test)",
  "description": "AI-powered Telegram moderation bot with FastAPI webhook support.",
  "repository": "https://github.com/Oxeigns/Rak",
  "keywords": [
    "telegram",
    "bot",
    "ai",
    "moderation",
    "fastapi",
    "python"
  ],
  "stack": "heroku-22",

  "addons": [
    "heroku-postgresql:essential-0",
    "heroku-redis:mini"
  ],

  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },

  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token",
      "value": "PASTE_YOUR_BOT_TOKEN_HERE",
      "required": true
    },
    "API_ID": {
      "description": "Telegram API ID",
      "value": "35335474",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API Hash",
      "value": "65c9d8d32a75ba9af8cc401d940b5957",
      "required": true
    },
    "OWNER_ID": {
      "description": "Bot Owner ID",
      "value": "1888832817",
      "required": true
    },
    "LOG_GROUP_ID": {
      "description": "Log Group ID",
      "value": "-100xxxxxxxxxx",
      "required": true
    },
    "FORCE_CHANNEL_ID": {
      "description": "Force Join Channel ID",
      "value": "-1002574289485",
      "required": true
    },
    "FORCE_CHANNEL_LINK": {
      "description": "Force Join Link",
      "value": "https://t.me/aghoris",
      "required": true
    },
    "GROQ_API_KEY": {
      "description": "Groq API Key",
      "value": "",
      "required": true
    },
    "GEMINI_API_KEY": {
      "description": "Gemini API Key",
      "value": "",
      "required": true
    },
    "HUGGINGFACE_TOKEN": {
      "description": "HF Token",
      "value": "",
      "required": false
    }
  },

  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
