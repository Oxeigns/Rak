{
  "name": "AI Governor Bot",
  "description": "AI-powered Telegram moderation bot with FastAPI webhook support.",
  "repository": "https://github.com/Oxeigns/Rak",
  "keywords": [
    "telegram",
    "bot",
    "ai",
    "moderation",
    "fastapi",
    "python"
  ],
  "stack": "heroku-22",
  "addons": [
    "heroku-postgresql:essential-0",
    "heroku-redis:mini"
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "API_ID": {
      "description": "Telegram API ID from my.telegram.org/apps",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API Hash from my.telegram.org/apps",
      "required": true
    },
    "GROQ_API_KEY": {
      "description": "Groq API key for text moderation (optional if using HF Router only)",
      "required": false
    },
    "GEMINI_API_KEY": {
      "description": "Gemini API key for image moderation (optional)",
      "required": false
    },
    "HUGGINGFACE_TOKEN": {
      "description": "Hugging Face token for router-based moderation (optional)",
      "required": false
    },
    "WEBHOOK_SECRET": {
      "description": "Random secret for webhook verification",
      "generator": "secret",
      "required": false
    },
    "WEBHOOK_URL": {
      "description": "Public HTTPS webhook URL (optional; leave empty to use polling)",
      "required": false
    },
    "SENTRY_DSN": {
      "description": "Sentry DSN for error tracking (optional)",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
