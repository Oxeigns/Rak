{
  "name": "AI Governor Bot (Test)",
  "description": "AI-powered Telegram moderation bot with FastAPI webhook support.",
  "repository": "https://github.com/Oxeigns/Rak",
  "keywords": [
    "telegram",
    "bot",
    "ai",
    "moderation",
    "fastapi",
    "python"
  ],
  "stack": "heroku-22",

  "addons": [
    "heroku-postgresql:essential-0",
    "heroku-redis:mini"
  ],

  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },

  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token",
      "required": true
    },

    "ADMIN_IDS": {
      "description": "Bot Admin IDs (comma separated if multiple)",
      "value": "1888832817",
      "required": true
    },

    "LOG_GROUP_ID": {
      "description": "Log Group ID (-100xxxx)",
      "required": true
    },

    "FORCE_CHANNEL_ID": {
      "description": "Force Join Channel ID (-100xxxx)",
      "value": "-1002574289485",
      "required": true
    },

    "FORCE_CHANNEL_LINK": {
      "description": "Force Join Link (https://t.me/username)",
      "value": "https://t.me/aghoris",
      "required": true
    },

    "CALLBACK_SECRET": {
      "description": "Random secret key (min 16 chars)",
      "required": true
    },

    "GROQ_API_KEY": {
      "description": "Groq API Key",
      "required": true
    },

    "GEMINI_API_KEY": {
      "description": "Gemini API Key",
      "required": true
    },

    "HUGGINGFACE_TOKEN": {
      "description": "HF Token",
      "required": false
    }
  },

  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
